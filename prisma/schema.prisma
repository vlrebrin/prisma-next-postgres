model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  role      Role   @default(DEVELOPER)
  email     String
  avatar    String
  @@map(name: "users")// из. Vercel
}

enum Role {
  USER
  ADMIN
  DEVELOPER
}
